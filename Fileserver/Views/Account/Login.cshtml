@using Application.Models
@using Domain.Services
@inject IAuthenticationStateProvider authProvider
@{
    var user = await authProvider.GetClaimsPrincipal();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Netcode</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark  justify-content-between">
        <div class="container">
            <a href="/Index" class="navbar-brand">Fileserver</a>
        </div>
    </nav>

    <div class="container body-content w-25 mt-5 ml-auto mr-auto card" >
        @using (Html.BeginForm("login", "Account", method: FormMethod.Post, htmlAttributes:new{@class="card-body"}))
        {
            <div class="form-group">
                <label for="userName">Email</label>
                <input type="text" name="userName" id="userName" class="form-control" placeholder="Enter email" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" current-password >
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fileserver</p>
        </footer>
    </div>
</body>
</html>